{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // be explicit about types included
    // to avoid clashing with Jest types
    "types": ["cypress"],
    // turn off sourceMap
    // see: https://github.com/cypress-io/cypress/issues/26203
    "sourceMap": false
  },
  "include": [
    "../../node_modules/cypress",
    "./**/*.ts"
  ]
}
